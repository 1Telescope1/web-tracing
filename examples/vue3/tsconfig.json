{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@web-tracing/core": ["../../packages/core/index.ts"],
      "@web-tracing/core/*": ["../../packages/core/*"],
      "@web-tracing/utils": ["../../packages/utils/index.ts"],
      "@web-tracing/types": ["../../packages/types/index.ts"],
      // "@web-tracing/component": ["./packages/component/index.ts"],
    },
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
